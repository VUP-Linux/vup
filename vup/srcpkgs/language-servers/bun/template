# Template file for 'bun'
pkgname=bun
version=1.3.6
revision=2
archs="x86_64 aarch64"
create_wrksrc=yes
short_desc="Incredibly fast JavaScript runtime, bundler, test runner, and package manager"
maintainer="AmarBego <begovicamar@proton.me>"
license="MIT"
homepage="https://bun.sh"
nostrip=yes
nopie=yes

_baseurl="https://github.com/oven-sh/bun/releases/download/bun-v${version}"

case "$XBPS_TARGET_MACHINE" in
	x86_64)
		distfiles="${_baseurl}/bun-linux-x64.zip"
		checksum=9ba98d2134550d6690875b23a4f5c48e74b7cb267e8cc1b8f52605921c6c11ef
		;;
	aarch64)
		distfiles="${_baseurl}/bun-linux-aarch64.zip"
		checksum=5afd12b366ba2d8297245cc29c039416334dd872152c1db02e5c8aa8c66e96b1
		;;
esac

do_install() {
	vbin bun-linux-*/bun bun
}
