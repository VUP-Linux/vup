case "$XBPS_TARGET_MACHINE" in
	x86_64)
		distfiles+=" ${_dlbase}/code-insider-x64-1768567049.tar.gz"
		checksum+=" ba92ce13070db669f9fc92830564711c770aba606ea4054502f6ffa5fa5f892b"
